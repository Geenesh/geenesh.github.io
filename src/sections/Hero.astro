---
import { Image } from "astro:assets";
import ProfileImage from "../assets/profile-img.png";
import LinkedIN from "../assets/linkedin.svg";
import Twitter from "../assets/twitter.svg";
import FaceBook from "../assets/facebook.svg";
import Github from "../assets/github.svg";
---

<div class='hero-container'>
  <div class='content-section'>
    <div class='left-content item'>
      <h1>I'M <span>JOHN DOE</span></h1>
      <p>Software Engineer & UI/UX <br /> Designer</p>
      <a href=''>Contact Me</a>
    </div>
    <div class='right-content item'>
      <Image class='image-profile' src={ProfileImage} alt='' />
      <div class='social-icons'>
        <div class='line icon'></div>
        <div class='icon'>
          <Image src={LinkedIN} alt='' />
        </div>
        <div class='icon'>
          <Image src={FaceBook} alt='' />
        </div>
        <div class='icon'>
          <Image src={Github} alt='' />
        </div>
        <div class='icon'>
          <Image src={Twitter} alt='' />
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .hero-container {
    background-color: var(--bg-color);
  }
  .content-section {
    height: 100vh;
    max-width: 1350px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
  }
  .left-content {
    width: 30%;
  }
  .left-content {
    display: flex;
    gap: 1rem;
    flex-direction: column;
    h1 {
      font-size: 1.3rem;
      font-weight: 500;
      color: var(--heading-color);
      span {
        font-size: 4rem;
        font-weight: 600;
      }
    }
    a {
      text-decoration: none;
      padding: 0.5rem 1rem;
      border: 1px solid var(--border-color);
      width: fit-content;
      font-weight: 400;
      color: var(--bg-color);
      background-color: var(--heading-color);
      transition: background-color 0.5s ease;

      &:hover {
        color: var(--white);
        background-color: var(--bg-color);
        border: 1px solid var(--border-color);
      }
    }
    p {
      color: var(--sub-txt-color);
      font-weight: 300;
    }
  }
  .right-content {
    width: 70%;
    overflow: hidden;
    position: relative;
    height: 100%;
    display: flex;
    align-self: center;
    justify-content: center;
    height: 100%;

    .image-profile {
      width: auto;
      height: 100%;
      object-fit: cover;
      padding: 3rem;
      filter: grayscale(0.7);
    }
  }
  .social-icons {
    position: absolute;
    bottom: 10%;
    right: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }
  .line {
    height: 100px;
    width: 2px;
    background-color: var(--white);
  }
  @media (max-width: 800px) {
    .content-section {
      height: fit-content;
      max-width: 100%;
      margin: 0 auto;
      display: flex;
      align-items: center;
      flex-direction: column-reverse;
      justify-content: center;
    }
    .left-content {
      width: 100%;
      padding: 1rem;
    }
    .right-content {
      width: 100%;
    }
    .social-icons {
      display: none;
    }
  }
</style>

<script>
  import gsap from "gsap";

  gsap.from(".image-profile", {
    opacity: 0,
    y: "100%",
    duration: 2,
  });
  gsap.from(".left-content", {
    opacity: 0,
    x: "100%",
    delay: 0.5,
    duration: 2,
  });
  gsap.from(".icon", {
    y: "200px",
    opacity: 0,
    duration: 1,
    stagger: { amount: 1 },
  });
</script>
