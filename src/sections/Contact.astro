---
import Location from "../assets/location.svg"
import Whatsapp from "../assets/whatapp.svg"
import Call from "../assets/call.svg"
import Mail from "../assets/mail.svg"
import { Image } from "astro:assets";
---

<div class='contact-section' id="contact">
  <div class='contact'>
    <div class='item details'>
      <div class="social-icons">

        <div class="icons-contact">
         <div class="image-logo"><Image src={Whatsapp} alt=""/></div>
         <p>91 1234567890</p>
        </div>
        <div class="icons-contact">
         <div class="image-logo"><Image src={Mail} alt=""/></div>
         <p>satham7934hqur@gmail.com</p>
        </div>
        <div class="icons-contact">
         <div class="image-logo"><Image src={Call} alt=""/></div>
         <p>91 1234434773</p>
        </div>
        <div class="icons-contact">
         <div class="image-logo"><Image src={Location} alt=""/></div>
        <p>H210, Hustlehub Tech Park <br></p>
        </div>
      </div>

   
    </div>
    <div class='item contact-form'>
      <div class='contact-details'>
        <div class='heading'>
          <h1>WRITE TO US</h1>
          <p>
            Lorem ipsum dolor sit amet consectetur, adipisicing elit. Quod,
            fugit.
          </p>
        </div>
        <form
          class='form-section'
          action='https://formspree.io/f/{form_id}'
          method='post'
        >
          <div class='input-box'>
            <label for='name'>Full Name</label>
            <input name='Name' id='name' type='text' />
          </div>
          <div class='input-box'>
            <label for='email'>Email Id</label>
            <input name='Email' id='email' type='email' />
          </div>
          <div class='input-box'>
            <label for='phone'>Phone Number</label>
            <input name='Phome' id='phone' type='number' />
          </div>
          <div class='input-box'>
            <label for='message'>Message</label>
            <textarea name='Message' id='message'></textarea>
          </div>

          <button type='submit'>Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .contact-section {
    width: 100%;
    background-color: #0000008a;
  }
  .contact {
    display: flex;
    height: 100%;
    width: 100%;
    background-color: var(--bg-color);
  }
  .heading {
    h1 {
      font-size: 1.2rem;
      font-weight: 600;
      color: var(--heading-color);
    }
    p {
      font-size: 0.9rem;
      font-size: 300;
      margin-top: 0.5rem;
      color: var(--sub-txt-color);
    }
  }
  .item {
    flex: 1;
  }
  .details{
    width: 100%;
    height: 100vh;
   
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center
  }
  .icons-contact{
    display: flex;
    gap: 1rem;
    align-items: center;

    p{
      font-size: 1.3rem;
      font-weight: 500;
      color: var(--sub-txt-color);
    }
    
  }
  .social-icons{
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  .image-logo{
    padding: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--sub-txt-color);
    border-radius: 50%;
    height: 70px;
    width: 70px;

    img{
      height: 100%;
      width: 100%;
      object-fit: contain;
    }

  }
  .contact-details {
    box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    background-color: var(--bg-card-color);
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    min-width: 500px;
  }
  .contact-form {
    display: flex;
    height: 100%;
    width: 80%;
    padding: 3rem;
    align-items: center;
    justify-content: center;
  }
  .input-box {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  .form-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  label {
    font-size: 0.8rem;
    color: var(--heading-color);
  }
  input,
  textarea {
    padding: 12px;
    border: 1px solid var(--heading-color);
    outline: none;
    transition: 0.5s;
    font-size: 1rem;
    resize: none;
    background-color: var(--bg-card-color);
    color: var(--heading-color)
  }
  input:focus,
  textarea:focus {
    /* border: 2px solid black; */
  }
  button {
    padding: 12px;
    font-size: 1rem;
    background-color: var(--heading-color);
    border: 1px solid var(--heading-color)
    color: var(--white);
    transition: background-color 0.5s ease;
    &:hover {
      
      color: var(--heading-color);
      border: 1px solid var(--heading-color);
      background-color: var(--bg-card-color);
     
    }
  }
  @media (max-width: 1100px){
    .contact{
      flex-direction: column-reverse;
      width: 100%;
      padding: 2rem 0;
      align-items: center;
      justify-content: center;
    }
    
  }
  @media (max-width:800px){
     .contact{
      flex-direction: column-reverse;
      width: 100%;
      padding: 2rem 0;
      align-items: center;
      justify-content: center;
    }
    .contact-details {
    
    min-width: 100%;
  }
  .contact-form {
   
    width: 100%;
    padding: 2rem 1rem;
   
  }
  .icons-contact{
   
    flex-direction: column;

    justify-content: center;
    p{
      font-size: 1.2rem;
      font-weight: 500;
      color: var(--sub-txt-color);
    }
    
  }
  }
</style>
