---
import { Image } from "astro:assets";
import Card from "../components/Card.astro";

import Figma from "../assets/figma.svg";
import React from "../assets/react.svg";
import Docker from "../assets/docker.svg";
import Angular from "../assets/angular.svg";
import Sass from "../assets/sass.svg";
import Aws from "../assets/aws.svg";
import Node from "../assets/node.svg";
import Postgres from "../assets/prisma.svg";
import ReactNative from "../assets/react-native.svg";
import Expo from "../assets/expo.svg";
const title = "satjyan";
---

<div class='skill-container'>
  <div class='skills-section'>
    <div class='item-2'>
      <div class='skill-card'>
        <div class='heading'>
          <div class='line anim'></div>
          <h1 class='anim'>SKILLS</h1>
        </div>
        <div class='grid'>
          <div class='grid-item anim'>
            <Card imagePath={Figma} toolName=' Figma' toolUse='Design Tool' />
          </div>
          <div class='grid-item anim'>
            <Card imagePath={React} toolName='React' toolUse='Frontend Tool' />
          </div>
          <div class='grid-item anim'>
            <Card imagePath={Node} toolName='Nodejs' toolUse='Backend Tool' />
          </div>
          <div class='grid-item anim'>
            <Card imagePath={Expo} toolName='Expo' toolUse='Mobile App Tool' />
          </div>
          <div class='grid-item anim'>
            <Card imagePath={Expo} toolName='Expo' toolUse='Mobile App Tool' />
          </div>
          <div class='grid-item anim'>
            <Card imagePath={Postgres} toolName='Postgres' toolUse='Database' />
          </div>
          <div class='grid-item anim'>
            <Card imagePath={Sass} toolName='Sass' toolUse='Style Tool' />
          </div>
          <div class='grid-item anim'>
            <Card imagePath={Sass} toolName='Sass' toolUse='Style Tool' />
          </div>
          <div class='grid-item anim'>
            <Card imagePath={Aws} toolName='AWS' toolUse='Web Service' />
          </div>
          <div class='grid-item anim'>
            <Card
              imagePath={ReactNative}
              toolName='React Native'
              toolUse='Mobile App Tool'
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .skill-container {
    background-color: var(--bg-color);
    padding: 2rem 0;
  }
  .skills-section {
    max-width: 1350px;
    margin: 0 auto;
    padding: 1rem;
  }
  .line {
    height: 1px;
    width: 100px;
    background-color: var(--heading-color);
  }
  .heading {
    display: flex;
    align-items: center;
    gap: 1rem;
    h1 {
      color: var(--heading-color);
      font-weight: 300;
    }
  }
  .skills-section {
    height: fit-content;
    width: 100%;
    display: flex;
  }
  .item-2 {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;

    justify-content: center;
  }

  .skill-card {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 5rem;
  }
  .grid-item {
    /* background-color: #ddd; */
    height: 150px;
    width: 150px;
  }
  @media (max-width: 1250px) {
    .grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
    .skills-section {
      height: fit-content;
    }
  }
  @media (max-width: 800px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
    .skills-section {
      height: fit-content;
    }
  }
</style>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  gsap.registerPlugin(ScrollTrigger);

  gsap.from(".anim", {
    opacity: 0,
    duration: 1,
    stagger: { amount: 1 },
    ease: "power3.out",
    scrollTrigger: {
      trigger: ".anim",
      start: "top 70%",
      end: "bottom bottom",
    },
  });
</script>
