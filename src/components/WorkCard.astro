---
import { Image } from "astro:assets";
import Image1 from "../assets/image-1.png";
const { imagePath, projectName, categoryName } = Astro.props;
---

<div class='card'>
  <Image src={imagePath} alt='Background Image' />
  <div class='overlay'></div>
  <div class='text'>
    <div class='project'>
      <p>{projectName}</p>
      <p>{categoryName}</p>
    </div>
  </div>
</div>

<style>
  .card {
    width: 400px;
    height: 400px;
    position: relative;
    overflow: hidden;
  }

  .card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: rgb(0, 0, 0, 0.3);
  }

  .text {
    position: absolute;
    bottom: 0;
    width: 100%;
    left: 0;
    padding: 1rem;
  }
  .project {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: rgba(0, 0, 0, 0.482);
    border-radius: 2px;
    padding: 1rem;
    border: 0.5px solid var(--border-color);
    backdrop-filter: blur(10px);
    p {
      font-size: 1rem;
      font-weight: 300;
      color: var(--sub-txt-color);
    }
  }
  @media (max-width: 500px) {
    .card {
      width: 100%;
      height: 300px;
      padding: 1rem;
    }
  }
</style>
